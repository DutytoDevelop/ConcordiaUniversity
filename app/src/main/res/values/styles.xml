<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="titleTextColor">@color/concordiaPurple</item>
        <item name="subtitleTextColor">@color/concordiaPurple</item>
    </style-->

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="titleTextColor">@color/concordiaPurple</item>
        <item name="subtitleTextColor">@color/concordiaPurple</item>
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/concordiaBGLight</item>
        <item name="android:textColor">@color/concordiaPurple</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@fonts/helvetica-neue-bold</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:actionBarStyle">@style/CustomTheme.ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="iconTint">@color/concordiaPurple</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/concordiaPurple</item>
    </style>

    <style name="myDrawerTheme">
        <item name="listPreferredItemHeightSmall">38dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">3dp</item>
        <!--item name="android:textStyle">bold</item-->
    </style>

    <style name="myMargins" parent="CustomTheme">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CustomTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/CustomTheme.ActionBar.Text</item>
    </style>

    <style name="CustomTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/concordiaPurple</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

</resources>
